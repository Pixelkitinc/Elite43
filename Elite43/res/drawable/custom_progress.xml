<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient android:startColor="#296a31" android:centerColor="#296a31"
                android:centerY="0.75" android:endColor="#296a31" android:angle="90" />
            <stroke android:width="1dp" android:color="#00ff1e" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient android:startColor="#ec1e31" android:endColor="#ec1e31"
                    android:angle="90" />
                <stroke android:width="1dp" android:color="#00ff1e" />
            </shape>
        </clip>
    </item>
</layer-list>